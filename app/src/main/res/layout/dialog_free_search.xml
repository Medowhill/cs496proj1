<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/free_dialog_search_margin"
                android:layout_marginTop="@dimen/free_dialog_search_margin"
                android:text="@string/free_search_include"
                android:textSize="@dimen/free_dialog_search_textSize" />

            <EditText
                android:id="@+id/free_editText_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/free_dialog_search_margin"
                android:layout_marginRight="@dimen/free_dialog_search_margin"
                android:lines="1"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/free_dialog_search_margin"
                android:text="@string/free_search_from"
                android:textSize="@dimen/free_dialog_search_textSize" />

            <CalendarView
                android:id="@+id/free_calendarView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/free_dialog_search_margin"
                android:text="@string/free_search_to"
                android:textSize="@dimen/free_dialog_search_textSize" />

            <CalendarView
                android:id="@+id/free_calendarView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>